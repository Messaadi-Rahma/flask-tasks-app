apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: flask-tasks-servicemonitor
  namespace: monitoring
  labels:
    release: kube-prometheus   # must match Prometheus selector
spec:
  selector:
    matchLabels:
      app: flask-tasks-app           # match Service labels
  namespaceSelector:
    matchNames:
      - default
  endpoints:
    - port: metrics                  # must match the Service port name
      path: /metrics                 # your Flask app exposes this
      interval: 15s
